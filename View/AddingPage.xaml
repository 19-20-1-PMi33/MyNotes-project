<Page x:Class="MyNotes.AddingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MyNotes"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddingPage" WindowHeight="450" WindowWidth="800"
      Background="White" ShowsNavigationUI="False">

  <Grid>
    <StackPanel Grid.Column="1">
      <StackPanel Orientation="Horizontal" Height="40" Background="Gray">
        <Button Name ="btnBack" Click="btnBack_Click" Content="Back" Background="#545d6a" Margin="10" Padding="10,0" Foreground="White" />
        <Button Name ="btnSave" Click="btnSave_Click" Content="Save" Background="#545d6a" Margin="10" Padding="10,0" Foreground="White"/>
      </StackPanel>
      <TextBox MaxLength="50" >Title</TextBox>
      <Separator></Separator>
      <TextBox AcceptsReturn="True" Height="355" VerticalScrollBarVisibility="Auto"
       HorizontalScrollBarVisibility="Auto">Text</TextBox>
    </StackPanel>

  </Grid>
</Page>
