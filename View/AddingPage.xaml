<Page x:Class="MyNotes.AddingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MyNotes"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddingPage" WindowHeight="450" WindowWidth="800"
      Background="#CEB3AB" ShowsNavigationUI="False">
    <Grid>
        <StackPanel Grid.Column="1">
            <StackPanel Orientation="Horizontal" Height="40" Background="Gray">
                <Button Name ="btnBack" Click="btnBack_Click" Content="Back" Background="#545d6a" Margin="10" Padding="10,0" Foreground="White" />
                <Button Name ="btnSave" Click="btnSave_Click" Content="Save"  Margin="10" Padding="10,0 " Background="#545d6a" Foreground="White"
                        Command="{Binding SaveCommand}" />

            </StackPanel>
            <Separator></Separator>
            <TextBox x:Name="txt1" MaxLength="50" Background="#EDE3E0" Text="{Binding Title}"/>
            <Separator></Separator>
            <TextBox x:Name="txt2" AcceptsReturn="True" Background="#EDE3E0" Height="385" VerticalScrollBarVisibility="Auto"
       HorizontalScrollBarVisibility="Auto" Text="{Binding Description}"/>
        </StackPanel>
    </Grid>
</Page>