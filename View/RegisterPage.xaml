<Page x:Class="MyNotes.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyNotes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage" WindowHeight="450" WindowWidth="800" 
      Background="#CEB3AB" ShowsNavigationUI="False">

    <Grid>
      <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="300">
            <Label Content="Sign up" Foreground="White" FontSize="25" HorizontalAlignment="Center" />
            <Separator></Separator>
            <Label Content="Username" Foreground="White"/>
            <TextBox Name="txtUsername" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Label Content="Email" Foreground="White"/>
            <TextBox Name="txtEmail" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Label Content="Password" Foreground="White"/>
            <PasswordBox Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="18"/>

            <Button Name="btnSignUp" Click="SignUpButton_Click" Content="Sign up" Margin="15" MaxWidth="100" Background="#545d6a" Foreground="White" FontSize="18" />
            <StackPanel Orientation="Horizontal" Margin="10" Width="220">
                <TextBlock Text="Already have an account?" />
                <TextBlock Margin="10,0,0,0">
                    <Hyperlink NavigateUri="LoginPage.xaml">Sign in</Hyperlink>
                </TextBlock>
            </StackPanel>
        </StackPanel>
   </Grid>
</Page>
