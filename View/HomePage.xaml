<Page x:Class="MyNotes.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyNotes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage" WindowHeight="450" WindowWidth="800" 
      Background="White" ShowsNavigationUI="False">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.35*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Background="LightGray">
            <Button Content="Notes" Margin="20,50,20,7" Background="White" />
            <Button Content="Profile settings" Margin="20,7" Background="White"/>
            <Button Content="Log out" Margin="20,7" Background="White"/>
        </StackPanel>
        <GridSplitter Grid.Column="1" ShowsPreview="False" Width="3" HorizontalAlignment="Center" VerticalAlignment="Stretch" />
        <StackPanel Grid.Column="2">
            <Canvas Height="40" Background="Gray">
                <Button Canvas.Left="10" Content="Add note" Background="White" Margin="10" Padding="10,2"/>
                <ComboBox SelectionChanged="sortRuleChanged" MinWidth="95" Canvas.Left="100" Margin="10" Padding="10,3">
                    <ComboBoxItem IsSelected="True">Sort notes</ComboBoxItem>
                    <ComboBoxItem>By title</ComboBoxItem>
                    <ComboBoxItem>By time</ComboBoxItem>
                </ComboBox>
                <Button Canvas.Left="215" Content="Search" Background="White" Margin="10" Padding="10,2"/>
                <Button Canvas.Right="20" Content="Remove" Background="White" Margin="10" Padding="10,2"
                        Command="{Binding RemoveCommand}" CommandParameter="{Binding SelectedNote}"/>
            </Canvas>
            <ListBox ItemsSource="{Binding Notes}" SelectedItem="{Binding SelectedNote}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10">
                            <TextBlock FontWeight="Bold" Text="{Binding Path=Title}"/>
                            <TextBlock Text="{Binding Path=Description}"/>
                            <TextBlock FontSize="9" Text="{Binding Path=TimeModified}" Margin="0,20,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </StackPanel>

    </Grid>

</Page>
