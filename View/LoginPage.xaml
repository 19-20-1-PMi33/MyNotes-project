<Page x:Class="MyNotes.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyNotes"
      mc:Ignorable="d" 
      d:DesignHeight="740.506" d:DesignWidth="1247.152"
      Title="LoginPage" WindowHeight="450" WindowWidth="800" 
      Background="White" ShowsNavigationUI="False">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="300">
            <TextBlock Text="Sign in" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Email" Margin="5" />
            <TextBox Margin="5"/>
            <TextBlock Text="Password" Margin="5"/>
            <TextBox x:Name="txt_box2" Margin="5"/>
            <Button Content="Sign in" Margin="15" MaxWidth="100" Click="SignInButton_Click"/>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Don't have an account?"/>
                <TextBlock Margin="10,0,0,0">
                    <Hyperlink NavigateUri="RegisterPage.xaml">Sign up</Hyperlink>
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
