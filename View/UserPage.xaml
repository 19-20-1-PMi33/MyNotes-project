<Page x:Class="MyNotes.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyNotes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <Grid>
        <StackPanel Background="White" Margin="0">
            <Button Content="Back"  Margin="0,10,600,100"  Width="150" Click="Button_Click"/>
            <Label Content="Change User name" HorizontalAlignment="Center" Margin="5,0,5,5" />
            <TextBox x:Name="txt1" Width="120"  Margin="5" TextWrapping="Wrap"  HorizontalAlignment="Center"/>
            <Label Content="Change Email" HorizontalAlignment="Center"/>
            <TextBox x:Name="txt2" Width="120" Margin="5" TextWrapping="Wrap"  HorizontalAlignment="Center"/>
            <Label Content="Change Password" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="pass3" HorizontalAlignment="Center" Width="120"></PasswordBox>
            <Button Content="Update" Click="Update_Click"  Margin="30" Width="120"/>
            <TextBlock x:Name="block1" TextWrapping="Wrap"  Width="120" Height="31" Margin="340,0" />
        </StackPanel>
    </Grid>
</Page>
